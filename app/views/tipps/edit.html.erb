<div class="col-md-8">
  <% flash.each do |key, value| %>
    <%= content_tag :div, value.html_safe, class: "alert alert-warning", role: "alert" %>
  <% end %>

  <div class="well">
    <h4>Spieltag w√§hlen:</h4>

    <div class="btn-group btn-group-justified">
      <% (1..17).each do |n| %>
        <%= link_to n, edit_tipp_path(n), class: "btn btn-info btn-sm", type:"button", id: "matchday#{n}" %>
      <% end %>
    </div>
    <div class="btn-group btn-group-justified">
      <% (18..34).each do |n| %>
        <%= link_to n, edit_tipp_path(n), class: "btn btn-primary btn-sm", type:"button" ,id: "matchday#{n}" %>
      <% end %>
    </div>
    <br>
    <div class="header"><h3>Tippen Sie den <%= @matches.first.matchday %>. Spieltag</h3></div>

    <%= render 'form' %>

  </div>
</div>
<div class="col-md-4">
  
  <div class="panel panel-primary">
    <div class="panel-heading">Gesamtwertung</div>
    <table class="table">
      <thead>
        <th>Platz</th>
        <th>Name</th>
        <th>Punkte</th>
      </thead>
      <tbody>
        <% @top10.each do |user| %>
          <tr>
            <td><%= user.rank %>.</td>
            <td><%= user.username %></td>
            <td><%= user.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="col-md-4">
  
  <div class="panel panel-primary">
    <div class="panel-heading"><%= @matchday %>. Spieltag <span class="pull-right">Top 10</span></div>
    <table class="table">
      <thead>
        <th>Platz</th>
        <th>Name</th>
        <th>Punkte</th>
      </thead>
      <tbody>
        <% @matchday_top.each_with_index do |user, index| %>
          <tr>
            <td><%= index + 1%>.</td>
            <td><%= user.user.username %></td>
            <td><%= user.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
