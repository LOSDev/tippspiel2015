<div class="col-md-8">
  <% flash.each do |key, value| %>
    <%= content_tag :div, value.html_safe, class: "alert alert-warning", role: "alert" %>
  <% end %>

  <div class="well">    
    <ul class="pager">
      <% if @matchday > 1 %>
        <li class="previous"><%= link_to "&larr; Voriger Spieltag".html_safe, edit_tipp_path(@matchday - 1) %></li>
      <% else %>
        <li class="previous disabled"><a href="#">&larr; Voriger Spieltag</a></li>
      <% end %>
      <span class="h4"><%= @matches.first.matchday %>. Spieltag</span>
      <% if @matchday < 34 %>
        <li class="next"><%= link_to "Nächster Spieltag &rarr;".html_safe, edit_tipp_path(@matchday + 1) %></li>
      <% else %>
        <li class="next disabled"><a href="#">Nächster Spieltag &rarr;</a></li>
      <% end %>
    </ul>
    <%= render 'form' %>
  </div>
</div>
<div class="col-md-4">  
  <div class="panel panel-primary">
    <div class="panel-heading">Gesamtwertung</div>
    <table class="table">
      <thead>
        <th>Platz</th>
        <th>Name</th>
        <th>Punkte</th>
      </thead>
      <tbody>
        <% @top10.each do |user| %>
          <tr>
            <td><%= user.rank %>.</td>
            <td><%= user.username %></td>
            <td><%= user.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="col-md-4">
  <div class="panel panel-primary">
    <div class="panel-heading"><%= @matchday %>. Spieltag <span class="pull-right">Top 10</span></div>
    <table class="table">
      <thead>
        <th>Platz</th>
        <th>Name</th>
        <th>Punkte</th>
      </thead>
      <tbody>
        <% @matchday_top.each_with_index do |user, index| %>
          <tr>
            <td><%= index + 1%>.</td>
            <td><%= user.user.username %></td>
            <td><%= user.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
