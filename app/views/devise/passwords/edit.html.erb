<div class="col-md-8">
  <div class="well">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "", role:"form" }) do |f| %>
      <h4>Änderung Ihres Passworts</h4>

      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group"><%= f.label :password, "Neues Passwort" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control"  %></div>

      <div class="form-group"><%= f.label :password_confirmation, "Neues Passwort bestätigen" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %></div>

      <div><%= f.submit "Passwort Ändern!", class:"btn btn-primary active" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
