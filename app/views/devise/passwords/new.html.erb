<div class="col-md-8">
  <div class="well">
    <h4>Passwort vergessen?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post , class: "form-inline", role:"form"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :email %>:&nbsp
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <br><br>
      <div><%= f.submit "Informationen zum neuen Passwort verschicken", class:"btn btn-primary active" %></div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

