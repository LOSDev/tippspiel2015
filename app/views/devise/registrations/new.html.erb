<div class="well col-md-8"><h2>Registrieren</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: "form"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class:"form-control" %></div>

  <div class="form-group"><%= f.label :username, "Benutzername" %><br />
  <%= f.text_field :username, autofocus: true, class:"form-control" %></div>

  <div class="form-group"><%= f.label :password, "Passwort" %> <% if @validatable %><i>(mindestens <%= @minimum_password_length %> Zeichen)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %></div>

  <div class="form-group"><%= f.label :password_confirmation, "Passwort bestÃ¤tigen" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %></div>

  <div><%= f.submit "Registrieren", class:"btn btn-primary active" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>