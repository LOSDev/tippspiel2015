<div class="col-md-8"><div class="well"><h2>Profil bearbeiten</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put , role: "form"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :email, "E-Mail-Adresse" %><br />
  <%= f.email_field :email, autofocus: true,  class:"form-control"%></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group"><%= f.label :username, "Benutzername" %><br />
  <%= f.text_field :username, autofocus: true, class:"form-control" %></div>

  <div class="form-group"><%= f.label :password, "Passwort" %> <i>(frei lassen, wenn Sie es nicht ändern wollen.)</i><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %></div>

  <div class="form-group"><%= f.label :password_confirmation, "Passwort bestätigen" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %></div>

  <div class="form-group"><%= f.label :current_password, "Aktuelles Passwort" %> <i>(aktuelles Passwort eingeben um Änderungen durchzuführen)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class:"form-control" %></div>

  <div><%= f.submit "Änderungen bestätigen", class:"btn btn-default" %></div>
<% end %>

<h3>Account löschen?</h3>

<p><%= button_to "Konto löschen", registration_path(resource_name), data: { confirm: "Bestätigen Sie hiermit, dass Ihr Account endgültig gelöscht werden soll." }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Zurück", :back %>
</div>
</div>