<div class="col-md-6">
  <div class="well">
  <h2 class="h2">Einloggen</h2>
  
  <% flash.each do |key, value| %>
    <%= content_tag :div, value.html_safe, class: "alert alert-warning", role: "alert" %>
  <% end %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form"}) do |f| %>
    <div class="form-group"><%= f.label :email, "E-Mail-Adresse" %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control" %></div>

    <div class="form-group"><%= f.label :password, "Passwort" %><br />
      <%= f.password_field :password, autocomplete: "off", class:"form-control" %></div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me, "angemeldet bleiben" %></div>
    <% end -%>

    <div><%= f.submit "Einloggen", class: "btn btn-default" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>