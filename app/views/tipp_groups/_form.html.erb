<%= form_for(@tipp_group, html: {class: "", role: "form"}) do |f| %>
  <% if @tipp_group.errors.any? %>
    <div class="alert alert-danger">
      <% @tipp_group.errors.full_messages.each do |message| %>
        <%= message %><br>
      <% end %>
    </div>

  <% end %>
  <div class="form-group">
    <%= f.label :name, "Gruppenname" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :password, "Gruppen-Passwort" %><br>
    <%= f.text_field :password, class: "form-control"  %>
  </div>
  
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
