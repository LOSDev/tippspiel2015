<div class="col-md-12">
  <div class="well">
    <%= render 'nav' %>
      <br>
    <div role="form" class="form-inline">
      <div class="form-group">
        <label class="control-label">Tipp-Gruppe w√§hlen: 
        <%= collection_select(:tipp_group, :id, TippGroup.ordered, :id, :name, {:prompt=>true},
         {:class=>'form-control', :id=>'tipp-group-select', :style => "min-width:100px"}) %>
        </label>
      </div>
    </div>
    <br>
    <% if @users %>
      <div class="panel panel-primary">
        <div class="panel-heading">Tipp-Gruppe: <%= @tipp_group.name %></div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Platz</th>
              <th>Name</th>
              <th>Gesamtrang</th>
              <th>Punkte</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each_with_index do |user, index| %>
              <tr class="<%= "info" if current_user and current_user.username ==  user.username %>">
             
                <td><%= index + 1 %>.</td>
                <td><%= user.username %></td>
                <td><%= user.rank %>.</td>
                <td><%= user.points %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>