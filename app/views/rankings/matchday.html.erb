<div class="col-md-12">
  <div class="well">
    <%= render 'nav' %>
    <h4>Spieltag w√§hlen:</h4>
    <%= hidden_field_tag "matchday", @matchday, { :id => "matchday" } %>

    <div class="btn-group btn-group-justified">
      <% (1..17).each do |n| %>
        <%= link_to n, rankings_matchday_show_path(n), class: "btn btn-info btn-sm", id: "matchday#{n}" %>
      <% end %>
    </div>
    <div class="btn-group btn-group-justified">
      <% (18..34).each do |n| %>
        <%= link_to n, rankings_matchday_show_path(n), class: "btn btn-primary btn-sm",id: "matchday#{n}" %>
      <% end %>
    </div>
    <br>

    <div class="panel panel-primary">
      <div class="panel-heading">Top-Tipper des <%= @matchday %>. Spieltags</div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Platz</th>
            <th>Name</th>
            <th>Punkte</th>
          </tr>
        </thead>
        <tbody>
          <% @top100.each_with_index do |tipp, index| %>
            <tr class="<%= "info" if current_user and current_user.username ==  tipp.user.username %>">
              <td><%= index + 1 %>.</td>
              <td><%= tipp.user.username %></td>
              <td><%= tipp.points %></td>
            </tr>           
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
